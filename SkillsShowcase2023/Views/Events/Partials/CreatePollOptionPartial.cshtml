@using MVCSkillsShowcaseApp.Models.Events;
@model PollOptionModel

@{
    int eventId = (int)ViewData["EventId"];
    int pollId = (int)ViewData["PollId"];
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePollOption" asp-route-eventId=@eventId>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input asp-for="PollId" value=@pollId type="hidden"/>
            <div class="form-group">
                <input type="submit" value="Add Option" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}