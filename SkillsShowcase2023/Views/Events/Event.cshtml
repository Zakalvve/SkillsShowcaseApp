@using MVCSkillsShowcaseApp.Models.Events;
@model EventModel

@{
    ViewData["Title"] = Model.Name;
    int eventId = ViewBag.EventId;
}

<h1>@Model.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
    </dl>

    @if(Model.Poll != null)
    {
        <partial name="Partials/ViewPollPartial" model="@Model.Poll" />
    } else
    {
        @Html.ActionLink("Add Poll", "CreatePoll", new { eventId })
    }

</div>
<div>
    <a asp-action="Index">Back</a>
</div>
